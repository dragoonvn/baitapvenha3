<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv_ten"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#f20"
        android:layout_centerHorizontal="true"
        android:text="GAME LOTO"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_below="@+id/tv_ten"
        android:paddingTop="20dp"
        android:id="@+id/edt_nhapso1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số bắt đầu"
        android:inputType="number"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_below="@+id/edt_nhapso1"
        android:paddingTop="20dp"
        android:id="@+id/edt_nhapso2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số kết thúc"
        android:inputType="number"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btn_luuso"
        android:layout_below="@+id/edt_nhapso2"
        android:paddingTop="20dp"
        android:text="Lưu số"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="60dp"/>
    <Button
        android:id="@+id/btn_nhaplai"
        android:layout_below="@+id/edt_nhapso2"
        android:layout_alignParentRight="true"
        android:paddingTop="20dp"
        android:text="Nhập lại"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="60dp"/>
    <Button
        android:id="@+id/btn_ngaunhien"
        android:layout_below="@+id/btn_luuso"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:text="Random"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="60dp"/>
    <ScrollView
        android:layout_below="@+id/btn_ngaunhien"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            tools:text="1 - 3 - 10 - 11 - 13 - 15 "
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tv_ketqua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>
</RelativeLayout>